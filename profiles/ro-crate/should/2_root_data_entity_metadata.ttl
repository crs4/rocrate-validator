@prefix : <./> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix schema_org: <http://schema.org/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xml1: <http://www.w3.org/2001/XMLSchema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .


:RootDataEntityDirectRecommendedProperties a sh:NodeShape ;
    sh:name "RO-Crate Data Entity definition: RECOMMENDED properties" ;
    sh:description """The Root Data Entity SHOULD have the properties 
    `name`, `description` and `license` defined in 
    <https://www.researchobject.org/ro-crate/1.1/root-data-entity.html>""";
    sh:targetNode : ;
    sh:property [ 
        a sh:PropertyShape ;
        sh:name "Name of the Root Data Entity" ;
        sh:description """The Root Data Entity SHOULD have 
        a schema_org:name to identify the dataset to human well enough 
        to disanbiguate it from other datasets""" ;
        sh:minCount 1 ;
        sh:nodeKind sh:Literal ;
        sh:path schema_org:name;
        sh:message "The Root Data Entity SHOULD have a schema_org:name" ;
    ] . 
